<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.StrapleGroup.around"
          android:versionCode="14"
          android:versionName="Awesome Pancake">

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <permission android:name="com.StrapleGroup.around.permission.C2D_MESSAGE"
                android:protectionLevel="signature"/>
    <uses-permission android:name="com.StrapleGroup.around.permission.C2D_MESSAGE"/>
    <uses-sdk
            android:minSdkVersion="11"
            android:targetSdkVersion="19"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/around_logo"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Holo.Light.NoActionBar">
    <meta-data
                android:name="com.google.android.maps.v2.API_KEY"
                android:value="AIzaSyC4W5pi2_FtQIBlytiIS8sUhu_EF5Nv0TQ"/>
        <meta-data
                android:name="com.google.android.gms.version"
                android:value="@integer/google_play_services_version"/>
        <activity android:name=".ui.view.MainActivity"
                  android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustResize"
                  android:theme="@android:style/Theme.Holo.Light.NoActionBar"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <service
                android:name=".controler.services.LocationService"
                android:enabled="true"
                android:exported="true">
        </service>
        <service android:name=".controler.services.NotificatorAroundFriendsService"/>
        <service android:name=".controler.services.DataLoadService"/>
        <activity
                android:name="com.StrapleGroup.around.ui.view.LoginActivity"
                android:screenOrientation="portrait"
                >
        </activity>
        <activity android:name=".ui.view.RegisterActivity"
                  android:screenOrientation="portrait"/>
        <receiver
                android:name=".controler.services.GcmRequestReceiver"
                android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.StrapleGroup.around"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>