<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.StrapleGroup.nearby"
    android:versionCode="0.1"
    android:versionName="Awesome Pancake" >

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <!--
     The following two permissions are not required to use
     Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/nearby_prototyp1"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyC4W5pi2_FtQIBlytiIS8sUhu_EF5Nv0TQ" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.StrapleGroup.nearby.view.MapActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.StrapleGroup.nearby.view.FriendsListActivity"
            android:label="@string/title_activity_friends_list" >
        </activity>

        <service
            android:name="com.StrapleGroup.nearby.controler.services.LocationService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <receiver android:name="com.StrapleGroup.nearby.controler.services.BootBroadcast" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.StrapleGroup.nearby.FirstReceiver" >
            <intent-filter android:priority="1" >
                <action android:name="com.StrapleGroup.nearby.controler.services.LocationService.BROADCAST_ACTION" >
                </action>
            </intent-filter>
        </receiver>
//Czytaj wiÄ™cej na: http://javastart.pl/programowanie-android/broadcast-receivers/#ixzz38aN7IqMC
        <activity
            android:name="com.StrapleGroup.nearby.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

</manifest>