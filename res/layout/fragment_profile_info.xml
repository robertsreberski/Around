<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_ui"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="33dp"
            android:text="Login:\n(Name in app)"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView10"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="20dp"
            android:text="Phone number:\n(Optional)"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/login_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView11"
            android:layout_alignEnd="@+id/phone_field"
            android:layout_alignRight="@+id/phone_field"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView10" />

        <EditText
            android:id="@+id/phone_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView11"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView11"
            android:ems="10"
            android:inputType="phone" />

        <ImageView
            android:id="@+id/profile_button"
            android:layout_width="400px"
            android:layout_height="400px"
            android:layout_below="@+id/textView11"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" />

        <ImageButton
            android:id="@+id/next_button1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/profile_button"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>
</ScrollView>