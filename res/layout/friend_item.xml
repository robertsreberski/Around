<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="@drawable/friend_item_layout">
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/friend_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Friend Name"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textSize="30dp"
              android:textColor="#1d1d1d"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_marginTop="10dp">
    </TextView>
    <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/delete"
            android:background="@drawable/ic_list_remove"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" android:layout_alignBottom="@+id/friend_name"/>
</RelativeLayout>