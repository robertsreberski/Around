<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="${relativePackage}.${activityClass}"
                android:background="@drawable/around_login_background">

    <EditText
            android:id="@+id/loginField"
            android:hint="login"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="250dp"
            android:singleLine="true"
            android:layout_height="50dp"
            android:background="@drawable/edit_texts"
            android:ems="10"
            android:layout_centerVertical="true" android:layout_alignLeft="@+id/passField"
            android:layout_alignStart="@+id/passField">

    <requestFocus/>
    </EditText>

    <EditText
            android:id="@+id/passField"
            android:layout_width="250dp"
            android:hint="password"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:background="@drawable/edit_texts"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPassword"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/loginField" android:layout_marginTop="5dp"/>

    <Button
            android:id="@+id/loginButton"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="login"
            android:text="Log in"
            android:background="@drawable/flat_buttons"
            android:layout_marginTop="25dp" android:layout_below="@+id/passField"
            android:layout_centerHorizontal="true"/>
