<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:background="#CC4435">

    <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/around"
            android:id="@+id/mainSubView"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true" android:layout_alignParentTop="true"
            android:layout_marginTop="16dp" android:layout_marginBottom="18dp"/>
    <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/sub_you"
            android:id="@+id/imageView" android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/mainSubView" android:layout_marginBottom="18dp"
            android:layout_marginTop="16dp" android:layout_marginLeft="8dp"/>
</RelativeLayout>