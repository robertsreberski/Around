<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/list_item_request"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:textColor="@color/common_signin_btn_light_text_default"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/friend_requesting"
            android:textSize="40dp"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_toLeftOf="@+id/accept_button" android:text="spajki"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            android:id="@+id/accept_button"
            android:layout_alignParentTop="true" android:layout_toLeftOf="@+id/reject_button"
            android:layout_alignBottom="@+id/friend_requesting"/>
    <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            android:id="@+id/reject_button"
            android:layout_alignParentTop="true" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_alignBottom="@+id/accept_button"/>
</RelativeLayout>