<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="${packageName}.${activityClass}">


    <fragment
            android:id="@+id/map_create"
            android:name="com.StrapleGroup.around.ui.controler.MapControler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"/>

    <Button
            android:id="@+id/Log_off"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:onClick="logoff"
            android:text="Log off"
            android:background="#FFE7BA"
            android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <fragment android:layout_width="300dp"
              android:layout_height="60dp"
              android:name="com.StrapleGroup.around.ui.view.UserInfoFragment" android:id="@+id/fragment"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"
              tools:layout="@layout/user_info_fragment"
              android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

</RelativeLayout>