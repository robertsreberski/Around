<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="#ecf0f1"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:id="@+id/friend_list_layout"
              android:animateLayoutChanges="true"
              tools:context="${packageName}.${activityClass}">
    <include android:layout_width="match_parent"
             android:layout_height="60dp"
             layout="@layout/action_bar_friends" android:id="@+id/include2"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="4dp"
            android:id="@+id/listViewTest" android:layout_gravity="center_horizontal"
            android:layout_marginRight="4dp" android:layout_marginLeft="4dp" android:layout_below="@+id/include2"
            android:layout_alignParentBottom="true" android:layout_marginTop="5dp"/>

</RelativeLayout>
