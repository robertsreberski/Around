<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What&apos;s your location?"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your location feature is off, turn it on to use the app in a better way!"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="18dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Allow Internet location"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/internet_toggle"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="7dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Allow GPS location"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/gps_toggle"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/gps_toggle"
        android:layout_toStartOf="@+id/gps_toggle" />

    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/toggle_button"
        android:id="@+id/internet_toggle"
        android:textOn=""
        android:textOff=""
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginTop="10dp"
        android:checked="true"
        android:clickable="false"
        android:enabled="false"
        android:layout_marginRight="5dp" />

    <ToggleButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textOn=""
        android:textOff=""
        android:clickable="false"
        android:background="@drawable/toggle_button"
        android:id="@+id/gps_toggle"
        android:layout_below="@+id/internet_toggle"
        android:layout_alignLeft="@+id/internet_toggle"
        android:layout_alignStart="@+id/internet_toggle"
        android:layout_marginTop="10dp"
        android:checked="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="GO TO LOCATION SETTINGS"
        android:id="@+id/done_button"
        android:layout_below="@+id/gps_toggle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="20dp" />

</RelativeLayout>