<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/login_label"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/set_false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/login_label"
        android:layout_alignEnd="@+id/login_label"
        android:src="@drawable/false_button" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/set_true"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="21dp"
        android:src="@drawable/true_button"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/set_false"
        android:layout_toStartOf="@+id/set_false" />
</RelativeLayout>