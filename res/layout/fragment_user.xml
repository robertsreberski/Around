<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#ecf0f1">

    <include android:layout_width="match_parent"
             android:layout_height="60dp"
             layout="@layout/around_action_bar"
             android:id="@+id/include" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
             android:layout_alignParentStart="true"/>
    <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/profilePhoto"
            android:layout_below="@+id/include" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginLeft="10dp" android:layout_marginTop="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="robert"
            android:id="@+id/textView2"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/include" android:layout_toRightOf="@+id/profilePhoto"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_above="@+id/textView" android:layout_marginLeft="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/textView"
            android:layout_alignBottom="@+id/profilePhoto" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
            android:layout_below="@+id/profilePhoto"/>
</RelativeLayout>
