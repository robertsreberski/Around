<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
                android:layout_height="match_parent">
    <android.support.v4.view.ViewPager

            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true" android:id="@+id/linearLayout">
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:id="@+id/goToUser" android:layout_alignParentLeft="true"
                android:onClick="goToUser"
                android:layout_alignParentStart="true"
                android:layout_alignBottom="@+id/goToMap" android:layout_alignTop="@+id/goToAround"
                android:background="@drawable/icon_home" android:layout_gravity="bottom|left|right|top"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" android:clickable="true" android:focusable="true"/>
        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/goToAround"
                android:onClick="goToAround" android:layout_alignBottom="@+id/goToMap"
                android:layout_toRightOf="@+id/imageButton" android:layout_alignTop="@+id/goToMap"
                android:background="@drawable/icon_around_you" android:layout_gravity="bottom|left|right|top"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="0dp" android:clickable="true" android:focusable="true"/>
        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
        <ImageButton
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:id="@+id/goToMap"
                android:onClick="goToMap"
                android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"
                android:background="#ffcc4435" android:layout_gravity="bottom|left|right|top"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" android:adjustViewBounds="false" android:clickable="true"
                android:focusable="true"/>
        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/goToNews"
                android:onClick="goToNews" android:layout_alignBottom="@+id/goToMap"
                android:layout_toRightOf="@+id/goToMap" android:layout_alignTop="@+id/goToMap"
                android:background="@drawable/icon_logs" android:layout_gravity="bottom|left|right|top"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" android:clickable="true" android:focusable="true"/>
        <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="@android:color/darker_gray"/>
        <ImageButton
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:id="@+id/goToFriendList"
                android:onClick="goToFriendList"
                android:layout_alignTop="@+id/goToNews" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/goToNews"
                android:background="@drawable/icon_friendlist" android:layout_gravity="bottom|left|right|top"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp" android:clickable="true" android:focusable="true"/>
    </LinearLayout>
</RelativeLayout>